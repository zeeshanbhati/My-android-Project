<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    android:layout_height="match_parent"
    android:paddingRight="18dp"
    android:paddingLeft="18dp"
    tools:context=".Login">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/app_logo" />

    <EditText
        android:textColor="@android:color/white"
        android:inputType="textWebEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    Enter Email"
        android:layout_marginTop="50dp"
        android:textColorHint="@android:color/white"
        android:id="@+id/edittextmailSignin"
        android:drawableLeft="@drawable/outline_person_white_18dp"
        />


    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    Enter Password"
        android:textColor="@android:color/white"
        android:inputType="textWebPassword"
        android:textColorHint="@android:color/white"
        android:id="@+id/edittextSigninpass"
        android:drawableLeft="@drawable/outline_lock_white_18dp"/>


    <Button
        android:layout_marginTop="5mm"
        android:id="@+id/buttonsignin"
        android:background="@drawable/button_shape_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textSize="13dp"
        android:textColor="@color/White"
        />


    <TextView
        android:id="@+id/textviewsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="@string/common_open_on_phone"
        android:text="Create an account"
        android:textColor="@android:color/white"
        android:textSize="4mm"
        android:textStyle="bold" />



    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/googlebtn"
        >

    </com.google.android.gms.common.SignInButton>



</LinearLayout>

